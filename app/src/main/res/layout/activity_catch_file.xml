<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ratha.localstorage.CacheFileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter your desc"
            android:id="@+id/desc"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Catch"
            android:onClick="onSaveCatch"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read Catch"
            android:onClick="onReadCatch"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Catch"
            android:onClick="onDeleteCatch"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Catch File"
            android:onClick="onListCatchFile"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/display"/>
    </LinearLayout>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyle"
        android:id="@+id/progressBar"/>
</FrameLayout>
